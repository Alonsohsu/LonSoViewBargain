<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
	<RelativeLayout 
	    android:layout_height="wrap_content" 
	 	android:layout_width="wrap_content" 
	 	android:id="@+id/relative_layout_1" 
	 	android:orientation="horizontal">
	 	<RelativeLayout 
	 	    android:layout_height="wrap_content" 
		 	android:layout_width="wrap_content" 
		 	android:id="@+id/relative_layout_2" 
		 	android:orientation="horizontal">
		    <ImageView 
		        android:src="@drawable/ic_launcher" 
		        android:visibility="invisible" 
		        android:id="@+id/list_content_img" 
		        android:layout_height="150dip" 
		        android:layout_width="150dip">
		    </ImageView>
		    <ProgressBar 
		        android:visibility="visible" 
		        android:layout_height="wrap_content" 
		        android:layout_width="wrap_content" 
		        android:id="@+id/list_content_progress" 
		        android:layout_marginTop="50dip" 
		        android:layout_marginLeft="50dip">
		    </ProgressBar>
	    </RelativeLayout>
	    <RelativeLayout
	        android:id="@+id/relative_layout_3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/relative_layout_2"
	        android:gravity="center_vertical|center_horizontal"
	        android:layout_centerVertical="true"
	        android:orientation="horizontal">
		    <RelativeLayout
	        android:id="@+id/relative_layout_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/list_content_list_num"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:text="TextView"
	            android:textSize="12dip">
	        </TextView>
	        <TextView
	            android:id="@+id/list_content_grid_num"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/list_content_list_num"
	            android:layout_marginTop="10dp"
	            android:gravity="center_vertical|center_horizontal"
	            android:text="TextView"
	            android:textSize="12dip">
	        </TextView>
	        </RelativeLayout>
	         <RelativeLayout
	        android:id="@+id/relative_layout_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/relative_layout_text"
	        android:orientation="horizontal">
	        <Button
	            android:id="@+id/list_content_add"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:focusable="false" 
	    		android:focusableInTouchMode="false"
	            android:text="@+string/product_add">
			</Button>
			<Button
	            android:id="@+id/list_content_share"
	            android:background="@drawable/fb_share"
	            android:layout_width="80dip"
	            android:layout_height="50dip"
	            android:focusable="false" 
	    		android:focusableInTouchMode="false"
	    		android:layout_below="@+id/list_content_add">
			</Button>
			</RelativeLayout>
	    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_height="wrap_content" 
	 	android:layout_width="wrap_content" 
	 	android:id="@+id/relative_layout_4" 
	 	android:orientation="horizontal"
	    android:layout_below="@+id/relative_layout_1">
	    <TextView 
	        android:layout_height="wrap_content" 
	        android:text="TextView" 
	        android:gravity="center_vertical|center_horizontal" 
	        android:layout_centerVertical="true" 
	        android:layout_marginLeft="10dip" 
	        android:textSize="12dip" 
	        android:id="@+id/list_content_name" 
	        android:layout_width="wrap_content">
	    </TextView>
    </RelativeLayout>
</RelativeLayout>
