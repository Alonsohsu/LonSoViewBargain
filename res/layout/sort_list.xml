<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:id="@+id/sort_list_ad"
        android:orientation="vertical" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></LinearLayout>
    <Spinner 
        android:id="@+id/sort_list_spinner"
        android:orientation="vertical" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/search_hint"
        />
    <TextView 
        android:id="@+id/sort_list_text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        />
	<EditText 
		android:id="@+id/sort_list_edit_text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    />
	<Button
		android:id="@+id/sort_list_search"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Button" />
    <ListView 
        android:cacheColorHint="#00000000" 
        android:layout_width="wrap_content" 
        android:id="@+id/sort_list_list" 
        android:layout_height="fill_parent"
        >
    </ListView>
</LinearLayout>